{
    "name": "handshake-backend",
    "version": "1.0.0",
    "description": "Production-ready backend for asynchronous player handshake system with real-time notifications",
    "main": "src/server.js",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon src/server.js",
        "test": "jest --verbose --coverage",
        "test:watch": "jest --watch",
        "test:unit": "jest --testPathPattern=unit",
        "test:integration": "jest --testPathPattern=integration",
        "lint": "eslint src/**/*.js",
        "migrate": "node src/migrations/runMigrations.js"
    },
    "keywords": [
        "gaming",
        "handshake",
        "websocket",
        "real-time",
        "notifications",
        "peer-to-peer"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@socket.io/redis-adapter": "^8.2.1",
        "bcryptjs": "^2.4.3",
        "bull": "^4.12.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1",
        "firebase-admin": "^12.0.0",
        "helmet": "^7.1.0",
        "ioredis": "^5.3.2",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.11.3",
        "pg-hstore": "^2.3.4",
        "rate-limit-redis": "^4.2.0",
        "redis": "^4.6.12",
        "sequelize": "^6.35.2",
        "socket.io": "^4.6.1",
        "uuid": "^9.0.1",
        "winston": "^3.11.0",
        "winston-daily-rotate-file": "^4.7.1"
    },
    "devDependencies": {
        "eslint": "^8.56.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.29.1",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "supertest": "^6.3.3"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ],
        "testMatch": [
            "**/tests/**/*.test.js"
        ]
    }
}
