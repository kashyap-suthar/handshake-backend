# Copy this to .env and configure with your credentials

# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration (PostgreSQL)
# Option 1: Use connection string
DATABASE_URL=postgresql://postgres:password@localhost:5432/handshake_db

# Option 2: Or use individual parameters
DB_HOST=localhost
DB_PORT=5432
DB_NAME=handshake_db
DB_USER=postgres
DB_PASSWORD=password
DB_POOL_MAX=20
DB_POOL_MIN=5

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
# IMPORTANT: Change this to a strong secret in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-at-least-32-characters
JWT_EXPIRATION=7d

# Firebase Cloud Messaging (FCM)
# Get these from Firebase Console > Project Settings > Service Accounts > Generate Private Key
# Leave empty to disable FCM (notifications won't be sent but app will still work)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# Example with values:
# FIREBASE_PROJECT_ID=my-gaming-app-12345
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIEvQIBADANBg...\n-----END PRIVATE KEY-----\n"
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-abc123@my-gaming-app-12345.iam.gserviceaccount.com

# Challenge & Handshake Configuration
CHALLENGE_EXPIRATION_SECONDS=3600
HANDSHAKE_TIMEOUT_SECONDS=30
MAX_RETRY_ATTEMPTS=3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
# Use * for development, set specific origin for production
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs
